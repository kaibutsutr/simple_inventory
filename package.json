{
  "name": "simple_inventory",
  "version": "1.0.0",
  "description": "Simple Inventory is a simple inventory management software, built to imporove the efficiency of business operations.",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "predeploy" : "npm run build",
    "deploy" : "gh-pages -d build",
    "dev": "webpack --config=Scripts/config/webpack.dev.js --watch",
    "build": "webpack --config=Scripts/config/webpack.prod.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "Jacob Mathew <simpleinventory@orangetreesoft.com>",
  "license": "Apache-2.0",
  "homepage": "https://www.orangetreesoft.com/simple_inventory",
  "build": {
    "appId": "com.orangetreesoft.simple_inventory",
    "productName": "Simple Inventory",
    "linux": {
      "category": "Utils",
      "icon": "assets/icons",
      "packageCategory": "utils",
      "maintainer": "Jacob Mathew <simpleinventory@orangetreesoft.com>",
      "target": [
        "deb"
      ],
      "synopsis": "Simple Invetory Management software built on Electron.JS"
    },
    "win": {
      "icon": "assets/icon.ico"
    }
  },
  "dependencies": {
    "excel4node": "^1.7.2",
    "md5": "^2.2.1",
    "moment": "^2.27.0",
    "sqlite3": "^5.0.0"
  },
  "devDependencies": {
    "electron": "^8.4.1",
    "gh-pages": "^6.1.1"
  }
}
